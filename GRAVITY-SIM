""" Created by byebrid on 4/Jan/2019. """

import numpy as np
import vpython as vp
import random
import math

vp.scene.caption = """Press Alt/Option to begin. Right button drag or Ctrl-drag to rotate "camera" to view scene.
To zoom, drag with middle button or Alt/Option depressed, or use scroll wheel.
     On a two-button mouse, middle is left + right.
Shift-drag to pan left/right and up/down."""

# MAY CONSIDER WRITING A CONFIG FILE.  OTHERWISE, IT'S A BIT POINTLESS.
config = {
    'updates': True, # If planets' positions update each frame.  Does not affect collisions
    'collisions': True, # If planets can collide and consequently merge
    'color_changes_on_impact': False, # If planets become red when collided
    'rotate_speed': random.uniform(0, math.pi/6), # Speed at which planet rotates.  Can be set to None to disable rotation
    'max_proximity': 0, # The closest two planets can be (from surface to surface)
    'max_vel': 670560, # The fastest valid velocity of a planet.  Obtained this from some article
    'start_vel': 100 * vp.vector.random(), #
    'start_axis': vp.vector.random(), # Starting axis of rotation of planet
    'frame_count': 500000, # how many frames of animation occur.
    'g_constant': 6.67408 * 10**(-11) # The universal gravitational constant
}

# SOME OF THESE COULD PROBABLY GO IN CONFIG
num_of_planets = 100
# Mass is measured in kilograms
min_mass = 10 ** 23
max_mass = 10 ** 30
# Radius is measured in metres
min_radius = 10 ** 6
max_radius = 10 ** 9
# max_init_pos determines farthest rectangular distance from origin each planet can 'spawn'
max_init_pos = 2.5 * 10**10
# dt is the time increment (in seconds)
dt = 250


class Planet(vp.sphere):
    """A subclass of vpython.sphere. Includes functions to update
    positions/velocities and also check for collisions
    """
    def __init__(self):
        super().__init__(
            # color = vp.color.green,
            texture = "data:image/jpeg;base64,",
            radius = random.uniform(min_radius, max_radius),
            mass = random.uniform(min_mass, max_mass),
            pos = max_init_pos * vp.vector.random(),
            vel = config['start_vel'],
            axis = config['start_axis],
            rot_speed = config['rotate_speed']
            )

    def __add__(self, other):
        """Returns the result of the 2 planets merging (i.e. conserved mass,
        momentum, and volume)
        """
        new_planet = Planet()
        new_planet.pos = (self.pos + other.pos) * 0.5
        total_momentum = self.mass * self.vel + other.mass * other.vel
        total_mass = self.mass + other.mass
        new_planet.vel = total_momentum / total_mass
        new_planet.radius = (self.radius ** 3 + other.radius ** 3) ** (1/3)
        return new_planet

    def __repr__(self):
        return '''Planet Object:
            Mass: {}
            Radius: {}
            Pos: {}
            Vel: {}
            '''.format(self.mass, self.radius, self.pos, self.vel)

    def update(self, list_b4_iter):
        """Updates position and velocity of planet. list_b4_iter is a copy of
        planets that is used to remove the bias associated with updating the
        first elements of the planets list before updating the following elements
        """
        net_force = vp.vector(0, 0, 0)
        for other in list_b4_iter:
            if self == other:
                continue
            dist = other.pos - self.pos
            dist_size = vp.mag(dist)    # Magnitude of distance
            dist_unit_v = vp.hat(dist)  # Unit vector of distance
            # net_force += G * Mm / R^2
            net_force += config['g_constant'] * self.mass * other.mass * dist_unit_v / (dist_size**2)

        accel = net_force / self.mass
        self.pos += self.vel * dt + 0.5 * accel * dt**2 # x = x0 + u*t + 0.5*a*t^2
        self.vel += accel * dt # v = v0 + a*t

        if vp.mag(self.vel) > config['max_vel']:
            self.vel *= config['max_vel'] / vp.mag(self.vel)
        if self.rot_speed != None:
            self.rotate(angle = self.rot_speed)

    # Don't need to be staticmethods but why not
    @staticmethod
    def update_all():
        """Iterates through all planets and updates positions."""
        planets_copy = planets  # Used to remove bias from positioning within planets
        for planet in planets:
            planet.update(list_b4_iter = planets_copy)

    @staticmethod
    def check_for_collisions():
        """Checks for collisions and if any occur, merges the planets and
        repeats until no 2 bodies are 'colliding'. Updates global planets.
        """
        global planets
        for planet in planets:
            for other in planets:
                if planet == other:
                    continue

                dist = vp.mag(other.pos - planet.pos)
                if dist <= planet.radius + other.radius + config['max_proximity']:
                    new_planet = planet + other
                    if config['color_changes_on_impact']:
                        new_planet.color = vp.color.red # To indicate collision

                    # Need to do this before removing (vpython thingy)
                    planet.visible = False
                    other.visible = False

                    planets.remove(planet)
                    planets.remove(other)
                    planets.append(new_planet)
                    Planet.check_for_collisions() # Recursion!
                    break # Otherwise iterating through list that doesn't exist


planets = []
for index in range(num_of_planets):
    new_planet = Planet()
    planets.append(new_planet)

# Wait for user to press spacebar
while True:
    ev = vp.scene.waitfor('keydown')
    if ev.key == 'alt':
        break

for frame in range(config['frame_count']):
    if config['collisions']:
        Planet.check_for_collisions()
    if config['updates']:
        Planet.update_all()
